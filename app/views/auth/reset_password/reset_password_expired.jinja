{% extends "layout.jinja" %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">⚠️ {{ title }}</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Lien expiré</h4>
                        <p>Le lien de réinitialisation a expiré.</p>
                        <hr>
                        <p class="mb-0">Les liens de réinitialisation sont valables pendant 1 heure.</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="/auth/reset-password/forgot-password?email={{ email }}" class="btn btn-primary">
                            Demander un nouveau lien
                        </a>
                        <a href="/auth/login" class="btn btn-outline-secondary">
                            Retour à la connexion
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
