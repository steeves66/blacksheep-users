{%- extends "layout.jinja" -%}

{%- block title -%}
    BlackSheep MVC Project Template
{%- endblock -%}

{%- block description -%}
    Project template to create web applications with MVC architecture using BlackSheep web framework.
{%- endblock -%}

{%- block css -%}
    <link rel="stylesheet" href="{{absurl()}}styles/public.css" />
{%- endblock -%}

{%- block body -%}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">✅ {{ title }}</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Bienvenue {{ username }} !</h4>
                        <p>Votre compte a été créé avec succès.</p>
                        <hr>
                        <p class="mb-0">Vous pouvez maintenant vous connecter avec votre email : <strong>{{ email }}</strong></p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="/auth/login" class="btn btn-primary">
                            Se connecter maintenant
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{%- endblock -%}


{%- block js -%}
<script src="{{absurl()}}scripts/freelancer.js"></script>
{%- endblock -%}
