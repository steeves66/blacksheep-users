
{%- extends "layout.jinja" -%}

{%- block title -%}
    BlackSheep MVC Project Template
{%- endblock -%}

{%- block description -%}
    Project template to create web applications with MVC architecture using BlackSheep web framework.
{%- endblock -%}

{%- block css -%}
    <link rel="stylesheet" href="{{absurl()}}styles/public.css" />
{%- endblock -%}

{%- block body -%}
<div class="container">
    <div class="row justify-content-center" style="margin-top: 100px; margin-bottom: 80px;">
        <div class="col-md-6">
            <div class="card shadow mt-10">
                <div class="card-header bg-primary text-secondary">
                    <h3 class="mb-0 text-green">{{ title }}</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error }}
                    </div>
                    {% endif %}

                 

                    <form method="POST" action="/auth/register" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Nom d'utilisateur</label>
                            <input
                                type="text"
                                class="form-control"
                                id="username"
                                name="username"
                                value="{{ form_data.username or '' }}"
                                required
                            >
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                value="{{ form_data.email or '' }}"
                                required
                            >
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input
                                type="password"
                                class="form-control"
                                id="password"
                                name="password"
                                required
                            >
                            <div class="form-text">Au moins 8 caractères</div>
                        </div>

                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
                            <input
                                type="password"
                                class="form-control"
                                id="confirm_password"
                                name="confirm_password"
                                required
                            >
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                S'inscrire
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <p>Déjà un compte ? <a href="/auth/login">Se connecter</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{%- endblock -%}


{%- block js -%}
<script src="{{absurl()}}scripts/freelancer.js"></script>
{%- endblock -%}